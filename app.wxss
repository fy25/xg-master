/**app.wxss**/
page{
  background-color: #efefef;
}
.orange{
  color: #FF552E;
  margin-left: 20rpx;
}
.release_tk{
  width:100%;
  height:100rpx;
  display:flex;
  align-items:center;
  background-color:#fff;
  border-top:1px solid #EFEFEF;
  padding:0 35rpx;
  box-sizing:border-box;
  font-size: 28rpx;
}
.release_tk_left{
  margin-right: 40rpx;
}
.release_tk_right{
  display: flex;
  align-items: center;
}
.release_tk_right_circle{
  width: 28rpx;
  height: 28rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  overflow: hidden;
}
.release_tk_right .release_tk_right_admin{
  color: #333;
  margin-left: 10rpx;
}
.release_tk_right .release_tk_right_info{
  color: #FF552E;
  margin-left: 20rpx;
}
.release_tk_right image{
  width: 32rpx;
  height: 32rpx;
}

.longText{
  width: auto!important;
}

.short{
  width: auto!important;
  margin-right: 20rpx;
}
