        <view class="forget_item_left">
            <text>职工号</text>
            <input type="number" placeholder-class="placeholder" placeholder="请输入职工号" bindinput="numTap" />
        </view>
        <view class="forget_item_right">
        </view>
    </view> -->
    <button open-type="getUserInfo" class="forget_btn" bindgetuserinfo="onGotUserInfo" catchtap="submitTap">注册</button>
    <view class="sign_up_tips">
        <icon type="success" size="15" color="#FF552E" />
        <view>
            <text>注册即同意</text>
            <text catchtap="xzTap">《徐钢生活圈用户协议》</text>
        </view>
    </view>
</view>