page{
  background-color: #EFEFEF;
}
.hot_search{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 35rpx 20rpx;
  box-sizing: border-box;
}
.hot_search_tit{
  font-size: 36rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.hot_search_list{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.hot_search_item{
  padding: 8rpx 8rpx;
  box-sizing: border-box;
}
.hot_search_item_wrapper{
  font-size: 24rpx;
  color: #999;
  border: 1px solid #DDDDDD;
  border-radius: 30px;
  padding: 8rpx 20rpx;
  box-sizing: border-box;
}

.product_list_wrapper{
  margin-top: 20rpx;
}

.check_tab{
  width: 100%;
  white-space: nowrap;
  height: 94rpx;
  background-color: #fff;
}
.check_tab_item{
  display: inline-block;
  font-size: 28rpx;
  color: #3F3F3F;
  height: 94rpx;
  line-height: 94rpx;
  padding: 0 20rpx;
  font-weight: 700;
  width: 20%;
  box-sizing: border-box;
}
.check_tab_item_wrapper{
  height: 100%;
  border-bottom: 2px solid transparent;
  box-sizing: border-box;
  text-align: center;
  transition: .3s;
}
.check_tab_item_wrapper_cur{
  border-color: #EE4B47;
  transition: .3s;
  color: #f50;
}