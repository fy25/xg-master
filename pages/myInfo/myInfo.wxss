/* pages/myInfo/myInfo.wxss */
.info_item{
    width: 100%;
    background-color: #fff;
    padding: 26rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eeeeee;
}
.info_left{
    font-size: 28rpx;
    color: #333;
    width: 100rpx;
}
.info_right{
    width: 580rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.info_right text{
    font-size: 28rpx;
    color: #666;
}
.info_right input{
    font-size: 28rpx;
    color: #666;
}
.right{
    width: 30rpx;
    height: 30rpx;
}
.avatar{
    width: 95rpx;
    height: 95rpx;
    border: 3px solid rgba(0, 0, 0, 0.3);
    border-radius: 50%;
}

.edit{
    background-color: #FF552E;
    color: #fff;
    font-size: 26rpx;
    width: 90%;
    margin: 40rpx auto;
}