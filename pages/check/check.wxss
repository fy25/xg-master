.check_tab{
    width: 100%;
    white-space: nowrap;
    height: 94rpx;
    background-color: #fff;
}
.check_tab_item{
    display: inline-block;
    font-size: 28rpx;
    color: #3F3F3F;
    height: 94rpx;
    line-height: 94rpx;
    padding: 0 20rpx;
    font-weight: 700;
    width: 20%;
    box-sizing: border-box;
}
.check_tab_item_wrapper{
    height: 100%;
    border-bottom: 2px solid transparent;
    box-sizing: border-box;
    text-align: center;
    transition: .3s;
}
.check_tab_item_wrapper_cur{
    border-color: #EE4B47;
    transition: .3s;
    color: #f50;
}

.check_list{
    width: 100%;
}
.check_item{
    width: 100%;
    background-color: #fff;
    margin-top: 10rpx;
}
.check_item_tit{
    width: 100%;
    height: 76rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.check_item_tit_left{
    font-size: 24rpx;
    color: #3F3F3F;
}
.check_item_tit_right{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #3F3F3F;
}
.check_item_content{
    border-top: 1px solid #DDDDDD;
    display: flex;
    align-items: flex-start;
    padding: 25rpx 28rpx;
    box-sizing: border-box;
    flex-direction: column;
}
.check_item_content_img_list{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.check_item_content_img{
    padding: 5rpx;
    box-sizing: border-box;
    width: 220rpx;
    height: 220rpx;
    margin-top: 14rpx;
}
.check_item_content_img image{
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}
.check_item_content_info{
    font-size: 26rpx;
    color: #3F3F3F;
}
.check_item_btn{
    display: flex;
    border-top: 1px solid #DDDDDD;
    height: 80rpx;
    align-items: center;
    justify-content: flex-end;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.check_item_btn button{
    font-size: 24rpx;
    color: #fff;
    background-color: #EE4B47;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 30px;
    padding: 0;
    margin: 0;
}