.personal_top{
    height: 180rpx;
    background: radial-gradient(#FF882F,#FF552E);
    padding: 0 40rpx;
    display: flex;
    align-items: center;
}
.personal_top image{
    width: 130rpx;
    height: 130rpx;
    border: 4rpx solid rgba(0, 0, 0, 0.3);
    border-radius: 50%;
}
.personal_top_img{
    position: relative;
}
.personal_top_img .personal_top_img_rz{
    position: absolute;
    width: 27rpx;
    height: 27rpx;
    bottom: 10rpx;
    right: 20rpx;
    border: none;
    border-radius: 0;
}
.personal_top_text{
    font-size: 30rpx;
    color: #fff;
    width: 500rpx;
}
.personal_top_text text{
    margin-left: 26rpx;
}

.personal_tab{
    margin-top: 20rpx;
    background-color: #fff;
}
.personal_tab_list{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.personal_tab_item{
    flex: 0 0 25%;
    height: 130rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 24rpx;
    color: #666;
}
.personal_tab_item image{
    width: 66rpx;
    height: 66rpx;
    margin-bottom: 10rpx;
}

.personal_row{
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 26rpx 0 30rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #3F3F3F;
    margin-top: 10rpx;
}
.personal_row_left{
    display: flex;
    align-items: center;
}
.personal_row image{
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}
.personal_row_right{
    display: flex;
    align-items: center;
}
.personal_row_right image{
    width: 24rpx;
    height: 24rpx;
}
.orange{
    font-size: 40rpx;
    color: #FF552E;
    margin-left: 30rpx;
}

.personal_row_right .rz_img1{
    height: 30rpx;
    width: 75rpx;
}

.personal_row_right .rz_img2{
    height: 30rpx;
    width: 95rpx;
}