<view class="forget">
  <view class="forget_item">
    <view class="forget_item_left">
      <text>手机号</text>
      <input type="number" placeholder-class="placeholder" placeholder="请输入手机号" bindinput="telTap" />
    </view>
    <view class="forget_item_right">
    </view>
  </view>
  <view class="forget_item">
    <view class="forget_item_left">
      <text>验证码</text>
      <input type="number" placeholder-class="placeholder" placeholder="6位数字" bindinput="codeTap" />
    </view>
    <view class="forget_item_right">
      <button catchtap="getCode" disabled="{{cant}}">获取</button>
    </view>
  </view>
  <view class="forget_item">
    <view class="forget_item_left">
      <text>输入新密码</text>
      <input type="password" placeholder-class="placeholder" placeholder="请输入密码" bindinput="pswTap" />
    </view>
    <view class="forget_item_right">
    </view>
  </view>
  <!-- <view class="forget_tips">密码由6-20位字母、数字或半角符号组成，不能是10位以下纯数字/字母/半角符号，字母需区分大小写。</view> -->
  <view class="forget_item">
    <view class="forget_item_left">
      <text>再次输入密码</text>
      <input type="password" placeholder-class="placeholder" placeholder="请输入密码" bindinput="pswTapSec" />
    </view>
    <view class="forget_item_right">
    </view>
  </view>
  <button class="forget_btn" catchtap="findTap">确定</button>
</view>